{
  "name": "generator-acsengine",
  "version": "0.0.3",
  "description":
    "Simple Yeoman Generator to help get started with the ACS Engine",
  "homepage": "https://github.com/jakkaj/generator-acsengine",
  "author": {
    "name": "Jordan Knight",
    "email": "jakkaj@gmail.com",
    "url": "https://github.com/jakkaj/generator-acsengine"
  },
  "files": ["generators"],
  "main": "generators/app/test.js",
  "keywords": [
    "ACS",
    "Kubernetes",
    "ACS Engine",
    "Azure Container Service Engine",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@types/yeoman-generator": "^2.0.1",
    "ava": "^0.25.0",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^4.2.1",
    "nodemon": "^1.17.2",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "typescript": "^2.7.2",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "@types/node": "^9.6.0",
    "chalk": "^2.1.0",
    "generate-password": "^1.4.0",
    "keypair": "^1.0.1",
    "node-rsa": "^0.4.2",
    "ssh-keygen-temp": "^0.5.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "prebuild": "typings install",
    "build": "tsc",
    "watch": "tsc -w --project ./src/tsconfig.json",
    "run": "nodemon ./generator/app/test.js --delay .5"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "https://github.com/jakkaj/generator-acsengine.git",
  "license": "MIT"
}
